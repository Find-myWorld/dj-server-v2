<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/threeback1" >

    <ListView
        android:id="@+id/three_item3_listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        android:dividerHeight="28dp" 
        android:divider="#00000000"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="65dip">
    </ListView>

     <LinearLayout 
        android:id="@+id/linear2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
	    <TextView
	        android:id="@+id/three_item3_top_ltextView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="6dp"
	        android:layout_marginLeft="26dp"
	        android:textColor="#fffffe"
	        android:textSize="22sp"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:text="项目" />
	
	    <TextView
	        android:id="@+id/three_item3_top_TextView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="6dp"
	        android:text="当日值日"
	        android:textColor="#fffffe"
	         android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:textSize="22sp" />
	
	    <TextView
	        android:id="@+id/three_item3_top_TextView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="6dp"
	        android:text="备注"
	        android:textColor="#fffffe"
	        android:layout_weight="1"
	        android:gravity="center_horizontal"
	        android:textSize="22sp" />
    </LinearLayout>

</RelativeLayout>
