<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/three_item1_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/three_item_pw" />

    <TextView
        android:id="@+id/three_item1_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/three_item1_imageView1"
        android:layout_toRightOf="@+id/three_item1_imageView1"
        android:text="Small Text"
        android:textColor="#072758"
        android:textSize="@dimen/gridview_item_size" 
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>