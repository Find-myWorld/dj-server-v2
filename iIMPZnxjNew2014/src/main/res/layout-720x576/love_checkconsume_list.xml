<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
     android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" 
        android:orientation="horizontal"
          android:gravity="center"
          >

        <TextView
            android:id="@+id/love_checkconsume_list_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="30dip"
            />

        <TextView
            android:id="@+id/love_checkconsume_list_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_toRightOf="@+id/love_checkconsume_list_tv1"
            android:text="2014/1/5 6:30"
            android:textColor="#ffffff"
            android:textSize="30dip" />
    </LinearLayout>

    <TextView
        android:id="@+id/love_checkconsume_list_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="方便面*2，牛肉*3，内裤*1"
        android:textColor="#ffffff"
        android:textSize="30dip" 
        android:layout_weight="1"
         android:gravity="center"/>

    <TextView
        android:id="@+id/love_checkconsume_list_tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="￥20"
        android:textColor="#ffffff"
        android:textSize="30dip"
          android:layout_weight="1" 
           android:gravity="center"/>

</LinearLayout>