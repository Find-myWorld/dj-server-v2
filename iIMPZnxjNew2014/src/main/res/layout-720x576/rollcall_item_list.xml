<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/rollcall_item_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/man2" />

    <TextView
        android:id="@+id/rollcall_item_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rollcall_item_imageView1"
        android:layout_toRightOf="@+id/rollcall_item_imageView1"
        android:text="Small Text"
        android:layout_marginBottom="5dp"
        android:textColor="#9AC8E2"
        android:textSize="20sp" 
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
