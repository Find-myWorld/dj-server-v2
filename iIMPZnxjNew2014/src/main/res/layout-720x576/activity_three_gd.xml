<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_message_top_margin"
    tools:context=".ThreeGdActivity" >

    <TextView
        android:id="@+id/three_top_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingTop="@dimen/title_pading_top"
        android:layout_marginLeft="@dimen/title_pading_left"
        android:text="三固定表"
        android:textSize="@dimen/consume_title_size" />

    <TextView
        android:id="@+id/three_top_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/three_top_textView1"
        android:layout_alignBottom="@+id/three_top_textView1"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/three_top_textView1"
        android:text="|       监房2"
        android:textSize="@dimen/consume_title_size" />

    <TextView
        android:id="@+id/three_top_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/three_top_textView1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/title_pading_right"
        android:textSize="@dimen/consume_title_size" />

    <ImageView
        android:id="@+id/three_top_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/three_top_textView1"
        android:layout_below="@+id/three_top_textView1"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/three_pw" />

    <ImageView
        android:id="@+id/three_top_imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/three_top_imageView1"
        android:layout_toRightOf="@+id/three_top_imageView1"
        android:layout_marginLeft="12dp"
        android:src="@drawable/three_zb" />

    <ImageView
        android:id="@+id/three_top_imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/three_top_imageView2"
        android:layout_toRightOf="@+id/three_top_imageView2"
        android:layout_marginLeft="12dp"
        android:src="@drawable/three_zr" />

      <android.support.v4.view.ViewPager
          android:id="@+id/three_top_vPager"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/three_top_imageView1"
          android:layout_alignRight="@+id/three_top_textView3"
          android:layout_below="@+id/three_top_imageView1"
          android:layout_gravity="center"
          android:layout_marginTop="8dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_marginBottom="50dp"
          android:persistentDrawingCache="animation" />

</RelativeLayout>
