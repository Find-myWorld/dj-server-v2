<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/three_item3_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:textColor="#072758"
        android:textSize="22sp" 
        android:text="2" />
    
    <!-- android:layout_marginLeft="87dip"
        android:layout_toRightOf="@+id/three_item3_textView1" -->

    <TextView
        android:id="@+id/three_item3_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:singleLine="true"
        android:textColor="#072758"
        android:textSize="22sp" 
        android:text="3" />

    <ImageView
        android:id="@+id/three_item3_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/three_item3_zr1" />

    <TextView
        android:id="@+id/three_item3_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/three_item3_imageView1"
        android:text="1"
        android:textColor="#072758"
        android:textSize="22sp" />

</RelativeLayout>
