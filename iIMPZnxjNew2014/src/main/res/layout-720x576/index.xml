<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index_back"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:paddingBottom="15dip"
        android:paddingRight="@dimen/title_pading_right" >

        <TextView
            android:id="@+id/version_and_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/online_whether"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络检测中..."
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tvTime"
        android:paddingRight="10dip"
        android:paddingTop="@dimen/title_pading_top"
        android:text="0000-00-00 | "
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/title_pading_right"
        android:paddingTop="@dimen/title_pading_top"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/main_menu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/main_menu2"
        android:layout_marginRight="0dp"
        android:layout_toLeftOf="@+id/main_menu2"
        android:background="@drawable/diy_button_selector"
        android:src="@drawable/image_btn1" />

    <ImageView
        android:id="@+id/main_menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/center_line"
        android:layout_alignBottom="@+id/center_line"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/image_btn2" />

    <ImageView
        android:id="@+id/center_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/transparent_center" />

    <ImageView
        android:id="@+id/vertical_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/transparent_vertical" />

    <ImageView
        android:id="@+id/main_menu3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/main_menu1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/main_menu2"
        android:src="@drawable/image_btn3" />

    <ImageView
        android:id="@+id/main_menu4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/main_menu2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/main_menu3"
        android:src="@drawable/image_btn4" />

    <ImageView
        android:id="@+id/main_menu5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_menu1"
        android:layout_below="@+id/main_menu1"
        android:layout_marginTop="10dp"
        android:src="@drawable/image_btn5" />

    <ImageView
        android:id="@+id/main_menu6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_menu2"
        android:layout_alignTop="@+id/main_menu5"
        android:src="@drawable/image_btn6" />

    <ImageView
        android:id="@+id/main_menu7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_menu3"
        android:layout_alignTop="@+id/main_menu6"
        android:src="@drawable/image_btn7" />

    <ImageView
        android:id="@+id/main_menu8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_menu4"
        android:layout_alignTop="@+id/main_menu6"
        android:src="@drawable/image_btn8" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp" >

        <ImageView
            android:id="@+id/setting"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
    </LinearLayout>

</RelativeLayout>