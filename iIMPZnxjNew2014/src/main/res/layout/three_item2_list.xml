<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

     <ImageView
        android:id="@+id/three_item2_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/three_item2_times" />

    <TextView
        android:id="@+id/three_item2_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/three_item2_imageView1"
        android:text="1"
        android:textColor="#072758"
        android:textSize="@dimen/gridview_item_size" />
    
    <TextView
        android:id="@+id/three_item2_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#072758"
        android:textSize="@dimen/gridview_item_size" 
        android:text="2" />

    <TextView
        android:id="@+id/three_item2_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="120dip"
        android:textColor="#072758"
        android:textSize="@dimen/gridview_item_size"
        android:text="3" />

    <!--   android:layout_alignParentTop="true"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/three_item2_textView2" -->
    
   

</RelativeLayout>
