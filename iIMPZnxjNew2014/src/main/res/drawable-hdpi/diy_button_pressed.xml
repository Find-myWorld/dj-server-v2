<?xml version="1.0" encoding="utf-8"?>  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
    <item>  
      <shape android:shape="rectangle">   
         <solid android:color="#ffff66" />  
         <corners  
            android:topLeftRadius="15dip"  
            android:topRightRadius="15dip"  
            android:bottomLeftRadius="15dip"  
            android:bottomRightRadius="15dip" />  
      </shape>  
   </item>  
   <!-- <solid android:color="#FFEC7600" />   -->
   <item android:top="0.1px" android:bottom="0.1px" android:left="0.2px" android:right="0.2px">  
     <shape>  
        <gradient   
            android:startColor="#ffff00" android:endColor="#ffff33"  
            android:type="linear" android:angle="90"  
            android:centerX="0.5" android:centerY="0.5" />  
        <corners  
            android:topLeftRadius="15dip"  
            android:topRightRadius="15dip"  
            android:bottomLeftRadius="15dip"  
            android:bottomRightRadius="15dip" />  
      </shape>  
   </item>    
</layer-list> 
